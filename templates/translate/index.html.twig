{% extends 'base.html.twig' %}

{% block title %}Hello TranslateController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ 'message.test.1'|trans }}</h1>

    {% set variabele1 = 'var1' %}
    {% set variabele2 = 'var2' %}
    {% set name = 'Jan' %}

    <p>{{ 'Hello, {name}' |trans({'%name%': 'Fabien'}) }}</p>
    <p>{{ 'Hello, {name}' |trans({'%name%': name }) }}</p>
    <p>{{ 'Hello, %name%' |trans({'%name%': 'Fabien'}) }}</p>

    {% trans %} Var 1 = %variabele1%{% endtrans %}
    <br>
    {% trans %} Var 2 = {variabele2}{% endtrans %}

</div>
{% endblock %}
